{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021", "dom"],
    "module": "node16",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "emitDeclarationOnly": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "nodenext",
    "paths": {
      "yjs": ["./src/index.js"],
      "yjs/internals": ["./src/internals.js"],
      "yjs/testHelper": ["./tests/testHelper.js"]
    }
  },
  "include": ["./src/**/*.js", "./tests/**/*.js"]
}
